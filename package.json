{
  "name": "state-prism",
  "license": "MIT",
  "version": "0.0.5",
  "description": "Subscribe to state changes",
  "keywords": [
    "state-management"
  ],
  "scripts": {
    "build": "rm -rf dist && rollup --config rollup.config.js",
    "release": "yarn clean && yarn audit && yarn build && np",
    "clean": "rm -f state-prism.tgz",
    "qa": "yarn tsc && yarn xo --fix",
    "go": "./build-test.sh"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/state-prism.git"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.2.1",
    "husky": "4.3.6",
    "lint-staged": "10.5.4",
    "np": "7.5.0",
    "rollup": "2.47.0",
    "typescript": "4.2.4",
    "xo": "0.39.1"
  },
  "dependencies": {
    "on-change": "3.0.1"
  }
}
