{
  "name": "state-prism",
  "license": "MIT",
  "version": "0.0.3",
  "description": "",
  "keywords": [],
  "scripts": {
    "build": "rm -rf dist && rollup --config rollup.config.js",
    "release": "yarn clean && yarn audit && yarn build && np",
    "clean": "rm -f state-prism.tgz",
    "qa": "yarn tsc && yarn xo --fix",
    "go": "./build-test.sh"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "env": [
      "es2020",
      "node"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "capitalized-comments": "off",
      "dot-notation": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "6.0.0",
    "husky": "4.3.0",
    "lint-staged": "10.4.2",
    "np": "6.5.0",
    "rollup": "2.32.1",
    "typescript": "4.0.3",
    "xo": "0.34.1"
  },
  "dependencies": {
    "on-change": "2.1.4"
  }
}
