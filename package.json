{
  "name": "state-prism",
  "license": "MIT",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "scripts": {
    "build": "rm -rf dist && rollup --config rollup.config.js",
    "release": "yarn clean && yarn audit && yarn build && np",
    "clean": "rm -f state-prism.tgz",
    "qa": "yarn tsc && yarn xo --fix",
    "go": "./build-test.sh"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "env": [
      "es2020",
      "node"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "capitalized-comments": "off",
      "dot-notation": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "4.1.1",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "np": "6.2.3",
    "rollup": "2.7.6",
    "typescript": "3.8.3",
    "xo": "0.30.0"
  },
  "dependencies": {
    "on-change": "2.0.1"
  }
}
